<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.framestudy.spring_mybatis.relationmag.mapper.PlayerMapper">
	
	
	<resultMap type="Player" id="playerMap">
		<id property="id" column="id" javaType="long"/>
		<result property="name" column="player_name" javaType="java.lang.String"/>
		<collection property="games" javaType="java.util.List" column="id" 
		fetchType="lazy" select="org.framestudy.spring_mybatis.relationmag.mapper.GameMapper.getGamesByPlayerId"></collection>
	</resultMap>
	
	<select id="getPlayerById" resultType="Player">
		select id as id,player_name as name from t_player where id = #{id}
	</select>
	
	<insert id="playerChoiceGames">
		insert into t_player_game (fk_player_id,fk_game_id) values
		<foreach collection="games" item="game" separator=",">
			(#{player.id},#{game.id})
		</foreach>
	</insert>
	
	<select id="getPlayerWithGamesByPlayerName" resultMap="playerMap">
		select * from t_player where player_name like CONCAT(#{name},'%')
	</select>
	
	
	
	
</mapper>